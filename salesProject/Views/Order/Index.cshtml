        var dataSource = new kendo.data.DataSource({
            transport: {
                read: {
                    url: "/Order/Order",
                    dataType: "jsonp"
                }
            },
            requestStart: function () {
                kendo.ui.progress($("#grid"), true);
            },
            requestEnd: function () {
                kendo.ui.progress($("#products"), false);
            }
        });

        dataSource.read();
       */
   

        //按刪除POST JSON到DeleteOrder
        $(".btnDelete").click(function (e) {

            var r = confirm("你確定要刪除嗎?");
            if (r == true) {
                var tr = $(this).closest('tr')
                $.ajax({
                    type: "POST",
                    url: "/Order/DeleteOrder",
                    data: "orderId=" + $(this).next().val(),
                    dataType: "json",
                    success: function (response) {
                        $(tr).remove();  //那行刪掉
                    }
                });
            } else {

            }

            return false;
        });
    });
</script>