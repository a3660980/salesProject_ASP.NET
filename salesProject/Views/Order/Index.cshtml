        //按刪除POST JSON到DeleteOrder
        $(".btnDelete").click(function (e) {

            var r = confirm("你確定要刪除嗎?");
            if (r == true) {
                var tr = $(this).closest('tr')
                $.ajax({
                    type: "POST",
                    url: "/Order/DeleteOrder",
                    data: "orderId=" + $(this).next().val(),
                    dataType: "json",
                    success: function (response) {
                        $(tr).remove();  //那行刪掉
                    }
                });
            } else {

            }

            return false;
        });
    });
</script>